<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_frame"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mention_background" >
    <!-- 搜索框 -->
  <Button
        android:id="@+id/Ip_Button"
        style="@style/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="确定" />

  <EditText
      android:id="@+id/student_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/student_no"
      android:layout_below="@+id/student_no"
      android:layout_marginTop="31dp"
      android:background="@drawable/textfield_search_empty"
      android:ems="10"
      android:hint="请输入姓名"
      android:maxLines="1" />

  <EditText
      android:id="@+id/student_no"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="87dp"
      android:background="@drawable/textfield_search_empty"
      android:ems="10"
      android:hint="请输入学号"
      android:maxLines="1" >

 
  </EditText>

</RelativeLayout>